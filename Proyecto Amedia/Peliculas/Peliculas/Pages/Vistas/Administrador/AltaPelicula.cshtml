@page
@model Peliculas.Pages.Vistas.Administrador.AltaPeliculaModel
@{
}

<div class="container">

    <div class="row" style="margin-bottom: 3rem;">
        <div class="col-sm-12">
            <h3><b>Agregar nueva pelicula</b></h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post">
                <div class="text-danger"> </div>
                <div class="form-group">

                    <label asp-for="pelicula.Nombre" class="control-label"></label>
                    <input asp-for="pelicula.Nombre" class="form-control" type="text">
                  

                </div>
                <div class="form-group">
                    <label class="control-label">Precio Venta</label>
                    <input asp-for="pelicula.PrecioVenta" class="form-control" type="text">

                </div>

                <div class="form-group">
                    <label class="control-label"> Cantidad Disponible Venta</label>
                    <input asp-for="pelicula.CantidadDisponibleVenta" class="form-control"  oninput="this.value=this.value.replace(/[^0-9]/g,'');">
                </div>

                <div class="form-group">
                    <label lass="control-label">Precio Alquiler</label>
                    <input asp-for="pelicula.PrecioAlquiler" class="form-control" type="text">
                </div>


                <div class="form-group">
                    <label class="control-label">Cantidad Disponible Alquiler</label>
                    <input asp-for="pelicula.CantidadDisponibleAlquiler" class="form-control"  oninput="this.value=this.value.replace(/[^0-9]/g,'');">
                </div>

                <div class=" form-group">
                    <input class="buttons btn-primary  btn-sm" style=" margin-bottom: 10rem;" type="submit" asp-page-handler="AltaPelicula" value="Agregar Película">
                </div>

                @Html.ValidationMessageFor(Model => Model.ErrorMessage, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(Model => Model.MensajeOk, "", new { @class = "text-primary" })


                <div class="col-md-6 text-right" style="margin-left: 29rem;">
                    <a class="btn btn-primary" href="/Vistas/Administrador/HomeAdministrador">Volver</a>
                </div>

            </form>

        </div>
    </div>

</div>